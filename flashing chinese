	var sleep = function(ms){
  let now = Date.now(),
      end = now + ms;
  while (now < end) {
    now = Date.now();
  }
};
while (c<1000)
{c++;
	for(var x=1;x<=replacements[j].length;x++/*,replacements[j][0]++*/)//need to iterate replacements[j] but its not insided the loop
	{


		//document.write(" replacements[j]=" + replacements[j]);   WORKING
